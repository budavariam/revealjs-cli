{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2018",
        "outDir": "dist",
        "lib": [
            "es2018",
            "ES2020.Promise"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
        "types": [
            "jest",
            "node"

        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "test"
    ]
}